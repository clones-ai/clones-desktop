{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[LEGACY] Run IPC Server Only",
      "type": "node-terminal",
      "request": "launch",
      "command": "PRIMARY_LOGGER=true sleep 2; cargo run --bin ipc-server-only",
      "cwd": "${workspaceFolder}/src-tauri"
    },
    {
      "name": "[LEGACY] Flutter Desktop",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart"
    },
    {
      "name": "Flutter Web (Development)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "web-server",
        "--web-port",
        "3000"
      ]
    },
    {
      "name": "Tauri Development",
      "type": "node-terminal",
      "request": "launch",
      "command": "cargo tauri dev",
      "cwd": "${workspaceFolder}/src-tauri"
    },
    {
      "name": "Build Tauri Release",
      "type": "node-terminal",
      "request": "launch",
      "command": "./scripts/build_web_tauri.sh",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "[LEGACY] Flutter Desktop with IPC",
      "configurations": [
        "[LEGACY] Run IPC Server Only",
        "[LEGACY] Flutter Desktop"
      ],
      "stopAll": true
    },
    {
      "name": "[NEW] Flutter Web + Tauri Development",
      "configurations": [
        "Flutter Web (Development)",
        "Tauri Development"
      ],
      "stopAll": true
    }
  ]
}
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[viralmind-native] Run IPC Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "cargo run --bin ipc-server-only",
      "cwd": "${workspaceFolder}/viralmind_flutter/native/src-tauri"
    },
    {
      "name": "viralmind-flutter",
      "request": "launch",
      "type": "dart",
      "program": "viralmind_flutter/lib/main.dart"
    }
  ],
  "compounds": [
    {
      "name": "[COMPOUND] Flutter with IPC",
      "configurations": [
        "[viralmind-native] Run IPC Server",
        "viralmind-flutter"
      ],
      "stopAll": true
    }
  ]
}
{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clones-desktop",
  "version": "0.1.25",
  "identifier": "ai.clones.desktop",
  "build": {
    "frontendDist": "../build/web",
    "devUrl": "http://localhost:3000"
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyQzI1NDIxMDEyMzk0RjMKUldUemxDTUJJVlRDOHAveDVIYngzTDBGVnVjR0k3K3FURWhFek95R2lDb1pzTTRxTkFsQnNRK28K",
      "endpoints": [
        "https://releases-test.clones-ai.com/latest/{{target}}/latest.json"
      ],
      "dialog": false
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "clones-dev"
        ]
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Clones Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fullscreen": false,
        "resizable": true,
        "visible": true,
        "center": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "'self' ipc: http://ipc.localhost https://api.jup.ag http://localhost http://localhost:8001 https://clones.ai https://api-staging.clones-ai.com https://www.gstatic.com https://fonts.gstatic.com https://www.google.com https://t0.gstatic.com https://t1.gstatic.com https://t2.gstatic.com https://t3.gstatic.com http://127.0.0.1:*",
        "script-src": "'self' 'unsafe-inline' https://www.gstatic.com 'wasm-unsafe-eval'",
        "font-src": "'self' https://fonts.googleapis.com https://fonts.gstatic.com",
        "img-src": "'self' asset: https://placehold.co http://asset.localhost https://s2.googleusercontent.com https://t0.gstatic.com https://t1.gstatic.com https://t2.gstatic.com https://t3.gstatic.com https://google.com https://www.google.com blob: data:",
        "media-src": "'self' data: blob: asset: http://asset.localhost http://127.0.0.1:*",
        "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com"
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "windows": {
      "signCommand": {
        "cmd": "trusted-signing-cli",
        "args": [
          "-e",
          "https://eus.codesigning.azure.net",
          "-a",
          "desktop-trusted-signer",
          "-c",
          "clones-desktop-cert",
          "-d",
          "Clones Desktop",
          "%1"
        ]
      }
    },
    "macOS": {
      "signingIdentity": "Developer ID Application: Sylvain SÃ©ramy (N6BFLZP5YM)",
      "entitlements": "entitlements.plist",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      }
    },
    "homepage": "https://clones-ai.com/",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
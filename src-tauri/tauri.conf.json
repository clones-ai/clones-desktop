{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clones-desktop",
  "version": "0.1.4",
  "identifier": "ai.clones.desktop",
  "build": {
    "frontendDist": "../build/web",
    "devUrl": "http://localhost:3000"
  },
  "plugins": {
    "updater": {
      "active": false,
      "pubkey": "LS0tLS1CRUdJTiBQVUJMSUMgS0VZLS0tLS0KTUNvd0JRWURLMlZ3QXlFQVR1NzF1YW5Lbk5xVlN0T0ZCWU5ySkNYeEtpeEs3c0lscGxpbnVaMWlxZXc9Ci0tLS0tRU5EIFBVQkxJQyBLRVktLS0tLQo=",
      "endpoints": [
        "https://github.com/clones-ai/clones-desktop/releases/latest/download/latest.json"
      ],
      "dialog": true
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "clones-dev"
        ]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Clones Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fullscreen": false,
        "resizable": true,
        "visible": true,
        "center": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "'self' ipc: http://ipc.localhost https://api.jup.ag http://localhost http://localhost:8001 https://clones.ai https://www.gstatic.com https://fonts.gstatic.com http://127.0.0.1:*",
        "script-src": "'self' 'unsafe-inline' https://www.gstatic.com 'wasm-unsafe-eval'",
        "font-src": "'self' https://fonts.googleapis.com https://fonts.gstatic.com",
        "img-src": "'self' asset: https://placehold.co http://asset.localhost https://s2.googleusercontent.com https://t0.gstatic.com https://t1.gstatic.com https://t2.gstatic.com https://t3.gstatic.com https://google.com https://www.google.com blob: data:",
        "media-src": "'self' data: blob: asset: http://asset.localhost",
        "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com"
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "windows": {
      "signCommand": {
        "cmd": "trusted-signing-cli",
        "args": [
          "-e",
          "https://eus.codesigning.azure.net",
          "-a",
          "desktop-trusted-signer",
          "-c",
          "clones-desktop-cert",
          "-d",
          "Clones Desktop",
          "%1"
        ]
      }
    },
    "macOS": {
      "signingIdentity": "Developer ID Application: _______ (N6BFLZP5YM)",
      "entitlements": "entitlements.plist",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      }
    },
    "homepage": "https://clones-ai.com/",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon_16x16.png",
      "icons/icon_16x16@2x.png",
      "icons/icon_32x32.png",
      "icons/icon_32x32@2x.png",
      "icons/icon_128x128.png",
      "icons/icon_128x128@2x.png",
      "icons/icon_256x256.png",
      "icons/icon_256x256@2x.png",
      "icons/icon_512x512.png",
      "icons/icon_512x512@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}